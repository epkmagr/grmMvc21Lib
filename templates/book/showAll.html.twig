{# templates/book/index.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Hello BookController!{% endblock %}

{% block content %}
<div class="container-fluid" role="main">
    <div class="jumbotron">
        <h1>Bibliotek</h1>
    </div>
    <div class="row">
        <div class="col-md-5 col-md-offset-3">
            <h3>Lista på alla böcker</h3>
        </div>
    </div>
    <div class="row">
        <div class="col-md-1 home21">
            <a href="{{ path('app_book') }}">&#8617;</a>
        </div>
        {% if books %}
        <div class="col-md-8 col-md-offset-1">
            <table>
                <tr>
                    <th>Titel</th>
                    <th>Författare</th>
                    <th>Detaljer</th>
                    <th>Ändra/Ta bort</th>
                </tr>
                {% for book in books %}
                {% set bookId = book.id %}
                <tr>
                    <td>{{ book.getTitel() }}</td>
                    <td>{{ book.getAuthor() }}</td>
                    <td>
                        <a class="symbol" href="{{ path('show_book', {'id': bookId}) }}"><i class="glyphicon glyphicon-info-sign"></i></a>
                    <td>
                        <a class="symbol" href="{{ path('do_update_book', {'id': bookId}) }}"><i class="glyphicon glyphicon-pencil"></i></a>
                        <a class="symbol" href="{{ path('do_delete_book', {'id': bookId}) }}"><i class="glyphicon glyphicon-trash"></i></a>
                    </td>
                </tr>
                {% endfor %}
            </table>
        </div>
        {% else %}
        <div class="row">
            <div class="col-md-8 col-md-offset-1">
                <h3>Biblioteket är tomt!</h3>
            </div>
        {% endif %}
    </div>
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <div class="myButton">
                <a href="{{ path('create_book') }}">Lägg till en ny bok</a>
            </div>
        </div>
    </div>
</div>
{% endblock %}
