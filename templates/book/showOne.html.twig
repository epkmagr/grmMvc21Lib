{# templates/book/index.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Hello BookController!{% endblock %}

{% block content %}
<div class="container-fluid" role="main">
    <div class="jumbotron">
        <h1>Bibliotek</h1>
    </div>
    <div class="row">
        <div class="col-md-5 col-md-offset-3">
            <h3>Detaljer om bok med id {{ id }}</h3>
        </div>
    </div>
    <div class="row">
        <div class="col-md-1 home21">
            <a href="{{ path('show_all_books') }}">&#8617;</a>
        </div>
        {% if book %}
        <div class="col-md-8 col-md-offset-1">
            <table>
                <tr>
                    <th>Titel</th>
                    <th>ISBN</th>
                    <th>FÃ¶rfattare</th>
                </tr>
                <tr>
                    <td>{{ book.getTitel()}}</td>
                    <td>{{ book.getISBN() }}</td>
                    <td>{{ book.getAuthor() }}</td>
                </tr>
            </table>
        </div>
        {% else %}
        <div class="row">
            <div class="col-md-8 col-md-offset-1">
                <h3>Det saknas information om den boken!</h3>
            </div>
        {% endif %}
    </div>
</div>
{% endblock %}
