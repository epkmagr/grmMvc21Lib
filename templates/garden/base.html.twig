<!DOCTYPE html>
<html>
    <head>
        {% block head %}
        <meta charset="UTF-8">
            <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet">
            <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap-theme.min.css"    rel="stylesheet">
            {% block stylesheets %}
                <link href="{{ asset('css/garden/proj.css') }}" type="text/css" rel="stylesheet"/>
            {% endblock %}
            <title>{% block title %}{% endblock %} - Maries Trädgårdsservice</title>
            <link rel="shortcut icon" href="{{ absolute_url('images/favicon.ico') }}">
        {% endblock %}
    </head>
    <body role="document">
        <nav class="navbar navbar-fixed-top myNavbar">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false"   aria-controls="navbar">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="{{ path('me') }}">Maries <br>Trädgårdsservice</a>
                </div>
                <div id="navbar" class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        <li><a href="{{ path('app_garden') }}">Hem</a></li>
                        <li><a href="{{ path('services_garden') }}">Tjänster</a></li>
                        <li><a href="{{ path('blogg_garden') }}">Blogg</a></li>
                        <li><a href="{{ path('about_garden') }}">Om</a></li>
                    </ul>
                </div>
            </div>
        </nav>
        <div id="content">
            {% block content %}{% endblock %}
        </div>
        <div id="footer" class="site-footer row navbar-fixed-bottom">
            <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
            <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>
            {% block footer %}
            <div class="col-md-12">
                <div class="col-md-3 col-md-offset-1">
                    {{ include('garden/block/footer-col-1.markdown.twig')|markdown_to_html }}
                </div>
                <div class="col-md-3">
                    {{ include('garden/block/footer-col-2.markdown.twig')|markdown_to_html }}
                </div>
                <div class="col-md-3">
                    {{ include('garden/block/footer-col-3.markdown.twig')|markdown_to_html }}
                </div>
                <div class="col-md-11 col-md-offset-1">
                {{ include('garden/block/footer.markdown.twig')|markdown_to_html }}
            </div>
            {% endblock %}
        </div>
    </body>
</html>
