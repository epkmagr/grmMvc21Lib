{# templates/me.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Cardgame{% endblock %}

{% block content %}
<div class="container-fluid" role="main">
    <div class="jumbotron">
        <h1>kmom02</h1>
    </div>
    <div class="row">
        <div class="col-md-5 col-md-offset-3">
            <h3>Välkommen!</h3>
            <p>Du spelar mot datorn som också är bank. Lycka till!</p>
            <p>Välkommen att börja spela genom att klicka på knappen nedan.</p>
        </div>
    </div>
    <div class="row">
        <div class="col-md-4 col-md-offset-1">
            <div class="myButton">
                <a href="{{ path('deck') }}">Visa kortleken</a>
            </div>
            <div class="myButton">
                <a href="{{ path('shuffle') }}">Blanda kortleken</a>
            </div>
            <div class="myButton">
                <a href="{{ path('draw') }}">Dra ett kort</a>
            </div>
            <div class="myButton">
                {%- set number = '1' -%}
                <a href="{{ path('drawSeveral', {'number': "1"}) }}">Dra flera kort</a>
            </div>
        </div>
        <div class="col-md-4 col-md-offset-1">
            <div class="myButton">
                <a href="{{ path('deck2') }}">Visa kortlek med joker</a>
            </div>
            <div class="myButton">
                <a href="{{ path('deckJson') }}">Visa kortlek, Json</a>
            </div>
            <div class="myButton">
                <a href="{{ path('shuffleJson') }}">Blanda kortlek, Json</a>
            </div>
            <div class="myButton">
                <a href="{{ path('documentation') }}">Dokumentation</a>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <div class="myButton">
                <a href="{{ path('deal', {'players': "1", 'cards': "1"}) }}">Spela 21</a>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <div class="myButton">
                <a href="{{ path('dice-home') }}">Tärning</a>
            </div>
        </div>
    </div>
</div>
{% endblock %}
