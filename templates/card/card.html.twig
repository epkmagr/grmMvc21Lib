{# templates/me.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Cardgame{% endblock %}

{% block content %}
<div class="container-fluid" role="main">
    <div class="jumbotron">
        <h1>Kortspel 21</h1>
    </div>
    <div class="row">
        <div class="col-md-5 col-md-offset-3">
            <h3>Välkommen!</h3>
            <p>Du spelar mot datorn som också är bank. Lycka till!</p>
            <p>Välkommen att börja spela genom att klicka på knappen nedan.</p>
        </div>
    </div>
    <div class="row">
        <div class="col-md-4 col-md-offset-1">
            <div class="myButton">
                <a href="{{ path('deck') }}">Visa kortleken</a>
            </div>
            <div class="myButton">
                <a href="{{ path('shuffle') }}">Blanda kortleken</a>
            </div>
            <div class="myButton">
                <a href="{{ path('draw') }}">Dra ett kort</a>
            </div>
            <div class="myButton">
                {%- set field = 'number' -%}
                {%- set arr = { (field): '1' } -%}
                {%- set number = '1' -%}
                <a href="{{ '/card/deck/draw/:1' }}">Dra flera kort</a>
                {% dump(number) %}
            </div>
        </div>
        <div class="col-md-4 col-md-offset-1">
            <div class="myButton">
                <a href="{{ '/card/deck/deal/:1/:1' }}">Spela med 1 spelare & 1 kort</a>
            </div>
            <div class="myButton">
                <a href="{{ path('documentation') }}">Dokumentation</a>
            </div>
        </div>
    </div>
</div>
{% endblock %}
